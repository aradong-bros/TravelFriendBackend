<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="train">

	<select id="selectTrainStation" resultType="trainstationvo">
		<![CDATA[
		select * from trainStation
		]]>
	</select>
	
	<select id="selectTrainInfo" resultType="traininfovo">
		<![CDATA[
		select * from trainInfo
		]]>
	</select>
	
	<select id="selectTrainLine" resultType="trainlinevo">
		<![CDATA[
		select * from trainLine
		]]>
	</select>
	
	<select id="selectTrainCategory" resultType="traincategoryvo">
		<![CDATA[
		select * from trainCategory
		]]>
	</select>
	
	<select id="selectTrainOperationRoute" resultType="trainoperationroutevo">
		<![CDATA[
		select * from trainOperationRoute
		]]>
	</select>
	
	<select id="selectTrainStationByNo" parameterType="int" resultType="trainstationvo">
		<![CDATA[
		select * from trainStation where no = #{no}
		]]>
	</select>
	
	<select id="selectTrainInfoByNo" parameterType="int" resultType="traininfovo">
		<![CDATA[
		select * from trainInfo where no = #{no}
		]]>
	</select>
	
	<select id="selectTrainLineByNo" parameterType="int" resultType="trainlinevo">
		<![CDATA[
		select * from trainLine where no = #{no}
		]]>
	</select>
	
	<select id="selectTrainCategoryByNo" parameterType="int" resultType="traincategoryvo">
		<![CDATA[
		select * from trainCategory where no = #{no}
		]]>
	</select>
	
	<select id="selectTrainOperationRouteByNo" parameterType="int" resultType="trainoperationroutevo">
		<![CDATA[
		select * from trainOperationRoute where no = #{no}
		]]>
	</select>
	
	<insert id="insertTrainStation" parameterType="trainstationvo">
		<![CDATA[
		insert into trainStation values(#{no}, #{name})
		]]>
	</insert>
	
	<insert id="insertTrainInfo" parameterType="traininfovo">
		<![CDATA[
		insert into trainInfo values(#{no}, #{trainNum}, #{trainModel})
		]]>
	</insert>
	
	<insert id="insertTrainLine" parameterType="trainlinevo">
		<![CDATA[
		insert into trainLine values(#{no}, #{name}, #{orientation})
		]]>
	</insert>
	
	<insert id="insertTrainCategory" parameterType="traincategoryvo">
		<![CDATA[
		insert into trainCategory values(#{no}, #{workDate})
		]]>
	</insert>
	
	<insert id="insertTrainOperationRoute" parameterType="trainoperationroutevo">
		<![CDATA[
		insert into trainOperationRoute values(#{no}, #{trainInfo_no}, #{trainLine_no}, #{trainStation_no}, #{trainCategory_no}, #{order}, #{departureTime});
		]]>
	</insert>
	
	<delete id="deleteTrainStation" parameterType="int">
		<![CDATA[
		delete from trainStation where no = #{no}
		]]>
	</delete>
	
	<delete id="deleteTrainInfo" parameterType="int">
		<![CDATA[
		delete from trainInfo where no = #{no}
		]]>
	</delete>
	
	<delete id="deleteTrainLine" parameterType="int">
		<![CDATA[
		delete from trainLine where no = #{no}
		]]>
	</delete>
	
	<delete id="deleteTrainCategory" parameterType="int">
		<![CDATA[
		delete from trainCategory where no = #{no}
		]]>
	</delete>
	
	<delete id="deleteTrainOperationRoute" parameterType="int">
		<![CDATA[
		delete from trainOperationRoute where no = #{no}
		]]>
	</delete>
	
	<update id="modifyTrainStation" parameterType="map">
		<![CDATA[
		update trainStation
		set no = #{trainStationVo.no}, 
		    name = #{trainStationVo.name} 
		where no = #{no}
		]]>
	</update>
	
	<update id="modifyTrainInfo" parameterType="map">
		<![CDATA[
		update trainInfo
		set no = #{trainInfoVo.no},
		    trainNum = #{trainInfoVo.trainNum},
		    trainModel = #{trainInfoVo.trainModel}
		where no = #{no}
		]]>
	</update>
	
	<update id="modifyTrainLine" parameterType="map">
		<![CDATA[
		update trainLine
		set no = #{trainLineVo.no},
		    name = #{trainLineVo.name},
		    orientation = #{trainLineVo.orientation}
		where no = #{no}
		]]>
	</update>
	
	<update id="modifyTrainCategory" parameterType="map">
		<![CDATA[
		update trainCategory
		set no = #{trainCategoryVo.no},
		    workDate = #{trainCategoryVo.workDate}
		where no = #{no}
		]]>
	</update>
	
	<update id="modifyTrainOperationRoute" parameterType="map">
		<![CDATA[
		update trainOperationRoute
		set no = #{trainOperationRouteVo.no},
		    trainInfo_no = #{trainOperationRouteVo.trainInfo_no},
		    trainLine_no = #{trainOperationRouteVo.trainLine_no},
		    trainStation_no = #{trainOperationRouteVo.trainStation_no},
		    trainCategory_no = #{trainOperationRouteVo.trainCategory_no},
		    `order` = #{trainOperationRouteVo.order},
		    departureTime = #{trainOperationRouteVo.departureTime}
		where no = #{no}
		]]>
	</update>
</mapper>